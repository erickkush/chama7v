<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="20250923-4" author="kuria">
        <createTable tableName="loans">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="loan_number" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="amount" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="duration_months" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="DECIMAL(19,2)"/>
            <column name="total_amount" type="DECIMAL(19,2)"/>
            <column name="amount_paid" type="DECIMAL(19,2)" defaultValueNumeric="0.00"/>
            <column name="balance" type="DECIMAL(19,2)"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="purpose" type="VARCHAR(255)"/>
            <column name="approved_by" type="VARCHAR(255)"/>
            <column name="approval_date" type="DATETIME"/>
            <column name="rejection_reason" type="VARCHAR(255)"/>
            <column name="application_date" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="loans" baseColumnNames="member_id"
                referencedTableName="members" referencedColumnNames="id"
                constraintName="fk_loans_member"/>
    </changeSet>
</databaseChangeLog>
