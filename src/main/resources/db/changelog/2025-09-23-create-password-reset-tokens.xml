<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="20250923-7" author="kuria">
        <createTable tableName="password_reset_tokens">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="used" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="created_at" type="DATETIME"/>
            <column name="used_at" type="DATETIME"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="password_reset_tokens" baseColumnNames="member_id"
                referencedTableName="members" referencedColumnNames="id"
                constraintName="fk_passwordresettokens_member"/>
    </changeSet>
</databaseChangeLog>
