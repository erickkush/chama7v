<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="20250923-1" author="kuria">
        <createTable tableName="members">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="member_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="national_id" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="phone" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="total_contributions" type="DECIMAL(19,2)" defaultValueNumeric="0.00"/>
            <column name="outstanding_loan" type="DECIMAL(19,2)" defaultValueNumeric="0.00"/>
            <column name="force_password_change" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="account_activated" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="first_login_date" type="DATETIME"/>
            <column name="date_joined" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="is_deleted" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
